{
    "template": "thread_view",
    "description": "Trader_thread_view",
    "execution_order": 10,
    "enabled": true,
    "action": "str_replace",
    "find": "<xf:breadcrumb source=\"$forum.getBreadcrumbs()\" />",
    "replace": "$0\n<xf:if is=\"{{ $xf.visitor.hasPermission('trader', 'view') }}\">\n\t<xf:if is=\"in_array($thread.node_id, $xf.options.traderForums)\">\n\t\t<xf:button href=\"{{ link('trader/history', '', {'user_id': $thread.user_id}) }}\" class=\"button--link\">{{ phrase('trader_trader_history') }} ({{ ($thread.User.andy_trader_seller_count + $thread.User.andy_trader_buyer_count)|number }})</xf:button>\n\t\t<br /><br />\n\t</xf:if>\n</xf:if>"
}