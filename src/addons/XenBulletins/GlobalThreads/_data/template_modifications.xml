<?xml version="1.0" encoding="utf-8"?>
<template_modifications>
  <modification type="admin" template="category_edit" modification_key="add_g_thread_ids_category" description="global thread ids category" execution_order="10" enabled="1" action="str_replace">
    <find><![CDATA[<xf:macro template="node_edit_macros" name="position" arg-node="{$node}" arg-nodeTree="{$nodeTree}" />]]></find>
    <replace><![CDATA[<xf:textboxrow name="g_thread_ids" value="{$node.global_threads}" label="{{ phrase('g_thread_ids') }}" />
<xf:macro template="node_edit_macros" name="position" arg-node="{$node}" arg-nodeTree="{$nodeTree}" />

]]></replace>
  </modification>
  <modification type="admin" template="forum_edit" modification_key="add_g_thread_ids" description="global thread ids" execution_order="10" enabled="1" action="str_replace">
    <find><![CDATA[<xf:macro template="node_edit_macros" name="position" arg-node="{$node}" arg-nodeTree="{$nodeTree}" />
]]></find>
    <replace><![CDATA[<xf:textboxrow name="g_thread_ids" value="{$node.global_threads}" label="{{ phrase('g_thread_ids') }}" />
<xf:macro template="node_edit_macros" name="position" arg-node="{$node}" arg-nodeTree="{$nodeTree}" />

]]></replace>
  </modification>
  <modification type="public" template="forum_view" modification_key="add_global_thread" description="Add global threads" execution_order="10" enabled="1" action="str_replace">
    <find><![CDATA[<xf:breadcrumb source="$forum.getBreadcrumbs(false)" />]]></find>
    <replace><![CDATA[<xf:breadcrumb source="$forum.getBreadcrumbs(false)" />
<xf:include template="xb_global_threads" />]]></replace>
  </modification>
  <modification type="public" template="thread_view" modification_key="add_global_thread_thread_view" description="Add global threads on thread view" execution_order="10" enabled="1" action="str_replace">
    <find><![CDATA[<xf:breadcrumb source="$forum.getBreadcrumbs()" />]]></find>
    <replace><![CDATA[<xf:breadcrumb source="$forum.getBreadcrumbs(false)" />
<xf:include template="xb_global_threads" />]]></replace>
  </modification>
</template_modifications>
