    <find><![CDATA[					<xf:cell><a href="{$xf.options.traderMembersLink}{$result.buyer_id}/">{$result.UserBuyer.username}</a></xf:cell>]]></find>
    <replace><![CDATA[					<xf:cell><a href="{$xf.options.traderMembersLink}{$result.buyer_id}/">{$result.UserBuyer.username|substr(0, 2)}***</a></xf:cell>]]></replace>
  </modification>
</template_modifications>
