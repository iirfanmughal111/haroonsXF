<?xml version="1.0" encoding="utf-8"?>
<templates>
  <template type="admin" title="fs_scheduled_posting_addEdit" version_id="1020010" version_string="1.2.0 Alpha"><![CDATA[<xf:title>
  <xf:if is="$scheduled.id"> {{ phrase('fs_edit_scheduled') }} <xf:breadcrumb
  href="#">{{ phrase('fs_edit_scheduled') }}</xf:breadcrumb> <xf:else /> {{
  phrase('fs_add_scheduled') }} <xf:breadcrumb href="#">{{
  phrase('fs_add_scheduled') }}</xf:breadcrumb> </xf:if>
</xf:title>

<xf:form
  action="{{ link('schedule/save', $shedule) }}"
  class="block"
  ajax="1"
>
  <div class="block-container">
    <div class="block-body">
      <xf:textboxrow
        name="title"
        value="{$shedule.title}"
        label="{{ phrase('fs_scheduled_title') }}"
        autosize="true"
        row="5"
		  required="true"
      />


      <xf:uploadrow
        name="message_file"
        accept=".xls,.xlsx"
        required="{{$shedule.isInsert() ? true : false }}"
        label="{{ phrase('fs_message_file') }}"
      />

      <xf:uploadrow
        name="location_file"
        accept=".xls,.xlsx"
       required="{{$shedule.isInsert() ? true : false }}"
        label="{{ phrase('fs_location_file') }}"
      />

  

      <xf:formrow
        ><span class="inputGroup-text">
          {{ phrase('fs_scheduled_window') }}
        </span></xf:formrow>

   
    <xf:formrow label="{{phrase('fs_server_time')}}"
       ><span class="inputGroup-text">
         {{ date_time($xf.time) }}
       </span>
 
   </xf:formrow>

      <xf:formrow label="{{ phrase('fs_scheduled_start') }}">
        <div class="inputGroup">
          <xf:dateinput name="schedule_start" value="{$shedule.schedule_start}" />
          <span class="inputGroup-text"> {{ phrase('criteria_time:') }} </span>
          <span class="inputGroup" dir="ltr">
          		<xf:textbox name="sch_starttime" class="input--date time start" required="true" type="time"
						value="{{$shedule.getScheduleStart() ? $shedule.getScheduleStart() : ''}}"
						data-xf-init="time-picker" data-moment="{$timeFormat}" data-format="{{ $xf.language.time_format }}" />
          </span>
        </div>
      </xf:formrow>

      <xf:formrow label="{{ phrase('fs_scheduled_end') }}">
        <div class="inputGroup">
          <xf:dateinput name="schedule_end" value="{$shedule.schedule_end}" />
          <span class="inputGroup-text"> {{ phrase('criteria_time:') }} </span>
          <span class="inputGroup" dir="ltr">
           <xf:textbox name="sch_endtime" class="input--date time start" required="true" type="time"
							value="{{$shedule.getScheduleEnd() ? $shedule.getScheduleEnd() : ''}}"
						data-xf-init="time-picker" data-moment="{$timeFormat}" data-format="{{ $xf.language.time_format }}" />
          </span>
        </div>
      </xf:formrow>

      <xf:formrow />

      <xf:formrow label="{{ phrase('fs_post_start_date') }}">
        <div class="inputGroup">
          <xf:dateinput name="posting_start"  value="{$shedule.posting_start}"/>
          <span class="inputGroup-text"> {{ phrase('criteria_time:') }} </span>
          <span class="inputGroup" dir="ltr">
            <xf:textbox name="sch_str_time" class="input--date time start" required="true" type="time"
						value="{{$shedule.getPostStarting() ? $shedule.getPostStarting() : ''}}"
						data-xf-init="time-picker" data-moment="{$timeFormat}" data-format="{{ $xf.language.time_format }}" />
          </span>
        </div>
      </xf:formrow>
    </div>

    <xf:submitrow submit="{{ phrase('save') }}" fa="fa-save" />
  </div>
</xf:form>]]></template>
  <template type="admin" title="fs_scheduled_posting_index" version_id="1010010" version_string="1.1.0 Alpha"><![CDATA[<xf:title>{{ phrase('fs_post_Scheduled') }}</xf:title>

<xf:pageaction>
  <xf:button href="{{ link('schedule/add') }}" icon="add">{{ phrase('fs_add_scheduled') }}</xf:button>
</xf:pageaction>


<div class="block-container">
		<xf:if is="$schedules is not empty">
			<div class="block-body">
				
				<xf:datalist data-xf-init="responsive-data-list">
					<xf:datarow rowtype="header">
						<xf:cell>{{ phrase('schdule_title') }}</xf:cell>
						<xf:cell>{{ phrase('fs_scheduled_start') }}</xf:cell>
						<xf:cell>{{ phrase('fs_scheduled_end') }}</xf:cell>
						<xf:cell>{{ phrase('fs_post_Scheduled') }}</xf:cell>
						<xf:cell class="dataList-cell--min">&nbsp;</xf:cell>
						<xf:cell class="dataList-cell--min">&nbsp;</xf:cell>
					</xf:datarow>
					<xf:foreach loop="$schedules" value="$schedule">
						<xf:datarow>
							<xf:cell>{$schedule.title}</xf:cell>
							<xf:cell><xf:date time="{$schedule.schedule_start}" /></xf:cell>
							<xf:cell><xf:date time="{$schedule.schedule_end}" /></xf:cell>
							<xf:cell><xf:date time="{$schedule.posting_start}" /></xf:cell>
							<xf:action href="{{ link('schedule/edit', $schedule) }}">{{ phrase('edit') }}</xf:action>
							<xf:delete href="{{ link('schedule/delete', $schedule) }}" />
						</xf:datarow>
					</xf:foreach>
				</xf:datalist>
			</div>
			<div class="block-footer">
				<span class="block-footer-counter">{{ display_totals($logos, $total) }}</span>
			</div>
		<xf:else />
			<div class="block-body block-row">{{ phrase('no_results_found') }}</div>
		</xf:if>
	</div>

	<xf:pagenav page="{$page}" perpage="{$perPage}" total="{$total}"
		link="schedule" params="{$filters}"
		wrapperclass="block-outer block-outer--after" />]]></template>
</templates>
