{
    "template": "alert_post_mention",
    "description": "fs_escrow_notification_mentioned_phrase",
    "execution_order": 10,
    "enabled": true,
    "action": "preg_replace",
    "find": "/{{ phrase\\('x_mentioned_you_in_post_in_thread_y', {.*?}\\) }}/is",
    "replace": "<xf:if is=\"$content.Thread.node_id == $xf.options.fs_escrow_applicable_forum AND $content.Thread.escrow_id!=0\">\n\t{{ phrase('x_mentioned_you_in_escrow_y', {\n\t\t'name': username_link($user, false, {'defaultname': $alert.username}),\n\t\t'title': '<a href=\"' . link('threads', $content.Thread) . '\" class=\"fauxBlockLink-blockLink\">' . $content.Thread.title . '</a>'\n\t}) }}\n\t<xf:else />\n\t$0\n</xf:if>"
}