]]></template>
  <template type="public" title="security_question_index" version_id="1000400" version_string="1.0.4 Alpha"><![CDATA[<xf:title> {{ phrase('fs_security_question') }} </xf:title>

<xf:wrap template="account_wrapper" />

<xf:form
  action="{{ link('sec-qu/save') }}"
  ajax="true"
  class="block"
  data-force-flash-message="true"
>
  <div class="block-container">
    <div class="block-body">
      <!-- Question One -->
<xf:set var="$customs" value="{{[$c1,$c2]}}" />
<xf:foreach loop="$customs"  value="$custom"  i="$i">
	
	<xf:foreach loop="$questions" value="$question">

					
					
	</xf:foreach>
	  <xf:selectrow
				name="questions[]"
				label="{{ phrase('fs_question') }} {{$i}}"
				hint="{{ phrase('required') }}"
				 required="true"
			  >
		  	<xf:option value="0">{{ phrase('(none)') }}</xf:option>
					 <xf:foreach loop="$questions" value="$question">

					
						
							<xf:option
								value="{$question.question_id}"
								selected="{{$question.question_id==$questionExist.{{$i}}}}">{{$question.security_question}}</xf:option>
				          
		  </xf:foreach>
			  </xf:selectrow>
	
			 <xf:formrow
				rowtype="input"
				label="{{ phrase('fs_answer') }} {{$i}}"
				hint="{{ phrase('required') }}"
			  >
				<xf:textboxrow
				  name="answers[]"
				  value="{$answersArray.{{$i}}}"
				  placeholder="{{ phrase('fs_answer_one_placeholder') }}"
				  data-i="0"
				  rowtype="fullWidth"
							    required="true"
				/>
	</xf:formrow>
	 
			 

	</xf:foreach>

    </div>
    <xf:submitrow submit="" icon="save" />
  </div>
</xf:form>]]></template>
