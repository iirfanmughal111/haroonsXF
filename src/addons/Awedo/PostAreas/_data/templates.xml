<?xml version="1.0" encoding="utf-8"?>
<templates>
  <template type="public" title="awedo_postAreas" version_id="2000070" version_string="2.0.0"><![CDATA[<xf:title>{{ phrase('awedo_pa_xs_post_areas', {'name': $user.username}) }}</xf:title>

<xf:css src="awedo_post_areas_tab_content.css" />

<div class="block">
	  <div class="block-container">
		  <div id="PostAreas">			  		  
			  <xf:if is="{$postAreas}">
				<table>
				  <thead>
					<tr> 
					  <td class='header forum_title_column'>{{ phrase ('forum') }}</td>
					  <xf:if is="{$hasCreatedAThread}">
						 <td class='header thread_counts_column'> {{ phrase ('threads') }} </td>
					  </xf:if>
					  <td class='header post_counts_column'> {{ phrase ('posts') }} </td>        
				  </thead>    
				  <tbody>
					<xf:foreach loop="$postAreas" key="$key" value="$entry">
					<tr>
						  <td class="forum_title_column"> <a href='{{ link ('forums', {'node_id': {$postAreas.{$key}.node_id}}) }}' rel="nofollow"> {$entry.title} </a> </td>
						  <xf:if is="{$hasCreatedAThread}">
							<td class="thread_counts_column"> 
								<a href='{{ link('search/threads-of-member', null, {'user_id': {$user.user_id}, 'node': {$postAreas.{$key}.node_id} } ) }}'><xf:if is="$entry.thread_count > 0">{$entry.thread_count}</xf:if></a>								
							</td>
						  </xf:if>
						  <td class="post_counts_column"> 
							  <a href='{{ link('search/search', null, {'search_type': 'post', 'c[users]': {$user.username}, 'c[nodes][]': {$postAreas.{$key}.node_id} } ) }}'>{$entry.post_count}</a>						
						  </td>
					</tr> 
				  </xf:foreach>
				  </tbody>
				</table>
			  <xf:else />
				<span> {{ phrase ('awedo_pa_no_posts') }} </span>
			  </xf:if>
	  </div>
  </div>
</div>]]></template>
  <template type="public" title="awedo_post_areas_tab_content.css" version_id="1000011" version_string="1.0.0 Alpha 1"><![CDATA[#PostAreas table
{
	margin: 10px;
}

#PostAreas .header
{
  font-weight: bold;
  padding-bottom: 5px;

}

#PostAreas .post_counts_column,
#PostAreas .thread_counts_column
{
  padding-left: 25px;
  text-align: right;
}]]></template>
</templates>
