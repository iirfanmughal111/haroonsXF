{
    "template": "post_macros",
    "description": "Removes reply link from first post to prevent quoting of movie information",
    "execution_order": 10,
    "enabled": true,
    "action": "preg_replace",
    "find": "/<xf:if is=\"\\$thread.canReply().+xf:if>.+xf:if>/isU",
    "replace": "<xf:if is=\"$thread.traktMovie is empty || !$post.isFirstPost()\">\n\t$0\n</xf:if>"
}